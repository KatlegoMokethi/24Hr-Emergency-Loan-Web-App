@model Document

@{
    ViewData["Title"] = "View";
}

<div style="height: 100vh;">
    <div class="container">
        <h1>Document deletion</h1>

        <h3>Are you sure you want to delete this document?</h3>
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @*@Html.DisplayNameFor(model => model.UploaderId)*@
                    UploaderID
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UploaderId)
                </dd>
                <dt class="col-sm-2">
                    @*@Html.DisplayNameFor(model => model.filename)*@
                    File name
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.filename)
                </dd>
                <dt class="col-sm-2">
                    @*@Html.DisplayNameFor(model => model.DateUploaded)*@
                    Date uploaded
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateUploaded)
                </dd>
                <dt class="col-sm-2">
                    @*@Html.DisplayNameFor(model => model.DocType)*@
                    Document type
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DocType)
                </dd>
                <dt class="col-sm-2">
                    @*@Html.DisplayNameFor(model => model.extension)*@
                    Extention
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.extension)
                </dd>
                <dt class="col-sm-2">
                    @*@Html.DisplayNameFor(model => model.document)*@
                    Document
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.document)
                </dd>
                <dt class="col-sm-2">
                    @*@Html.DisplayNameFor(model => model.path)*@
                    Path
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.path)
                </dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>