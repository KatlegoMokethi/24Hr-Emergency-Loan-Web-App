<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" asp-href-include="lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" asp-href-include="styles/bootstrap.min.css">
    <link rel="stylesheet" asp-href-include="styles/magnific-popup.css">

    <!--Custom CSS-->
    <link rel="stylesheet" asp-href-include="styles/templatemo-style.css">
    <link rel="stylesheet" asp-href-include="styles/style.css">
    <link rel="stylesheet" asp-href-include="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

    <title>@ViewData["Title"] - 24 hour student loan</title>
</head>
<body>
    <!--Navbar-->
    <div class="navbar navbar-expand-md navbar-dark " style="background-color: black; font-weight: bold; color: white ;">
        @*@if (User.Identity.IsAuthenticated)
            {
                <div>Hello, @User.Identity.Name.Replace('.', ' ')</div>
            }*@
        <a class="navbar-brand">
            <img src="~/images/Logo.png"
                 alt="SIXTH SENSE" width="100" height="100" />
        </a>

        <!-- Toggler/collapsible Button -->
        <button class="navbar-toggler" type="button" data-toggle="collapse"
                data-target="#MyNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>

    <!--Content-->
    <div>
        @RenderBody()
    </div>

    <!--Fotter-->
    <div class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year.ToString()  - 24 Hour emergency loan (pty)
        </div>
    </div>

    <!-- JavaScript -->
    <script asp-src-include="lib/jquery/jquery.slim.min.js"></script>
    <script asp-src-include="lib/popper.js/popper.min.js"></script>
    <script asp-src-include="lib/bootstrap/js/bootstrap.min.js"></script>
    <script src='https://www.google.com/recaptcha/api.js'></script>

</body>
</html>
