<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" asp-href-include="lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" asp-href-include="styles/bootstrap.min.css" />
    <link rel="stylesheet" asp-href-include="styles/magnific-popup.css" />

    <!--Custom CSS-->
    <link rel="stylesheet" asp-href-include="styles/templatemo-style.css" />
    <link rel="stylesheet" asp-href-include="styles/style.css" />
    <link rel="stylesheet" asp-href-include="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" />
    <link rel="stylesheet" asp-href-include="~/font-awesome/css/all.css" />

    <title>@ViewData["Title"] - 24 hour student loan</title>
</head>
<body>
    <header>
        <!--Navbar-->
        <div class="navbar navbar-expand-md navbar-dark " style="background-color: black; font-weight: bold; color: white; width: 100%">
            @*@if (User.Identity.IsAuthenticated)
                {
                    <div>Hello, @User.Identity.Name.Replace('.', ' ')</div>
                }*@
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img src="~/images/Logo.png"
                     alt="SIXTH SENSE" width="100" height="100" />
            </a>

            <!-- Toggler/collapsible Button -->
            <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#MyNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Links -->
            <div class="collapse navbar-collapse" id="MyNavbar">
                <ul class="navbar-nav ml-auto text-left">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="User nav-link text-primary">Welcome, @User.Identity.Name </li>
                        if (User.IsInRole("Admins"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="CurrentLoans" style="color:white"><span class="fas fa-users fa-2x" data-toggle="tooltip" data-placement="left" title="Current Creditors" style="color: white;"></span></a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Applications" style="color:white"><span class="fas fa-file-alt fa-2x" data-toggle="tooltip" data-placement="left" title="View applications" style="color: white;"></span></a></li>
                            <li class="nav-item"> <a class="nav-link" asp-controller="Account" asp-action="Logout" style="color:white"><span class="fas fa-sign-out-alt fa-2x" data-toggle="tooltip" data-placement="left" title="Logout" style="color: white;"></span></a> </li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index" style="color:white">Home</a></li>
                            //<li class="nav-item"><a class="nav-link" asp-controller="Payment" asp-action="Checkout" style="color:white">test stripe</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Client" asp-action="Loans" style="color:white">Loans</a></li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Client" asp-action="Documents" style="color:white">Documents</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Client" asp-action="ApplyForLoan" style="color:white">Apply</a>
                            </li>
                            <li class="nav-item"> <a class="nav-link" asp-controller="Account" asp-action="Logout" style="color:white">Logout</a> </li>
                        }
                    }
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register" style="color:white">Register</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login" style="color:white">Login</a></li>
                    }
                </ul>
            </div>
        </div>
    </header>
    <!--Content-->
    <div>
        @RenderBody()
    </div>

    <!--footer-->
    @if (User.IsInRole("Admins"))
    {
        <footer class="footer text-muted text-center pb-3" style="background-color: black">
            &copy; @DateTime.Now.Year.ToString()  - 24 Hour emergency loan (pty)
        </footer>
    }
    else
    {
        <footer style="background-color:black;">
            <!-- Footer Links -->
            <div class="container text-light text-center text-md-left pt-3">
                <!-- Grid row -->
                <div class="row">
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                        <!-- Content -->
                        <h6 class="text-uppercase font-weight-bold">24Hr Student Loan</h6>
                        <hr class="deep-purple accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
                        <p>
                            A financial service for loaning money to students in times of need...
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-5 col-lg-5 col-xl-5 mx-auto mb-4">
                        <!-- Links -->
                        <h6 class="text-center font-weight-bold">GET CONNECTED WITH US</h6>
                        <hr class="deep-purple accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
                        <div class="text-center">
                            <ul class="social-network social-circle">
                                <li>
                                    <a href="#" class="icoRss" title="Rss"><i class="fas fa-rss"></i></a>
                                </li>
                                <li>
                                    <a href="https://www.facebook.com/24-Hour-Emergency-Student-Loan-100329798207609/" class="icoFacebook" title="Facebook"><i class="fab fa-facebook"></i></a>
                                </li>
                                <li>
                                    <a href="#" class="icoTwitter" title="Twitter"><i class="fab fa-twitter"></i></a>
                                </li>
                                <li>
                                    <a href="https://instagram.com/24houremergencystudentloan?igshid=kpj0cc8hxvh3" class="icoGoogle" title="Instagram"><i class="fab fa-instagram"></i></a>
                                </li>
                                <li><a href="#" class="icoLinkedin" title="Linkedin"><i class="fab fa-linkedin"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">

                        <!-- Links -->
                        <h6 class="text-uppercase text-center font-weight-bold">Contact</h6>
                        <hr class="deep-purple accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
                        <p>
                            For general info, please write to:
                            <a href="mailto:emergencystudentloan@gmail.com?">emergencystudentloan@gmail.com</a>
                        </p>
                    </div>
                    <!-- Grid column -->
                </div>
                <!-- Grid row -->

            </div>
            <!-- Footer Links -->
            <br class="bg-primary" />
            <!-- Copyright -->
            <div class="text-center text-muted pb-3">
                &copy; @DateTime.Now.Year.ToString()  - 24 Hour emergency loan (pty)
            </div>
            <!-- Copyright -->

        </footer>
    }
    <!--footer-->
    <!-- JavaScript -->
    <script asp-src-include="lib/jquery/jquery.slim.min.js"></script>
    <script asp-src-include="lib/popper.js/popper.min.js"></script>
    <script asp-src-include="lib/bootstrap/js/bootstrap.min.js"></script>
    <script asp-src-include='https://www.google.com/recaptcha/api.js'></script>
</body>
</html>
