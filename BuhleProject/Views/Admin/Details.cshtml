@model LoanApplication

@{
    ViewData["Title"] = "Details";
}
<div id="AdminBG">
    <div class="container text-light">
        <h1>Loan Application Details</h1>
        <hr class="bg-light"/>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Details" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="id" />
                    <div class="form-group">
                        <label asp-for="applicationDate" class="control-label">Applicant Date</label>
                        <input asp-for="applicationDate" class="form-control" />
                        <span asp-validation-for="applicationDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="applicant" class="control-label">Applicant</label>
                        <input asp-for="applicant" class="form-control" />
                        <span asp-validation-for="applicant" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="amount" class="control-label">Amount</label>
                        <input asp-for="amount" class="form-control" />
                        <span asp-validation-for="amount" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="approved" /> Approve @*@Html.DisplayNameFor(model => model.approved)*@
                        </label>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="rejected" /> Reject @*@Html.DisplayNameFor(model => model.rejected)*@
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
